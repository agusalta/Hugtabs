{
    "manifest_version": 3,
    "name": "Checkmate",
    "short_name": "Checkmate",
    "version": "1.0.0",
    "description": "Lista diaria de URLs en el Side Panel — revisalas cada día.",
    "icons": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "permissions": [
      "storage",
      "sidePanel",
      "tabs"
    ],
    "side_panel": {
      "default_path": "index.html",
      "openPanelOnActionClick": true
    },
    "background": { "service_worker": "background.js" },
    "action": {
      "default_title": "Checkmate — abrir panel",
      "default_icon": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png"
      }
    }
  }
  